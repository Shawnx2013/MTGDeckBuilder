<div id="addCardSearchContainer" class="body-container hide-container">
    <form id="addCardSearchForm">
        <div class="input-group">
            <label for="quantity">
                <b>Quantity:</b>
            </label>
            <input id="addCardQuantity" name="quantity" type="number" min="1" max="4" value="1">
        </div>
        <div class="input-group">
            <input id="addCardSearch" name="name" type="text" class="form-control" placeholder="Search Cards">
            <div class="input-group-append">
                <button id="addCardSearchSubmit" class="btn btn-secondary" type="button">
                    <i class="fa fa-plus"> Add</i>
                </button>
            </div>
        </div>
    </form>
</div>